# Configuração do Sistema de Previsão de Malária - Bié
# Versão 2.0 - Atualizado

# ==================== BANCO DE DADOS ====================
POSTGRES_DB=malaria_bie
POSTGRES_USER=malaria_user
POSTGRES_PASSWORD=malaria_pass
DATABASE_URL=postgresql://malaria_user:malaria_pass@localhost:5432/malaria_bie

# ==================== API BACKEND ====================
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production
LOG_LEVEL=INFO
DEBUG=false

# ==================== FRONTEND ====================
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development

# ==================== EMAIL E ALERTAS ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@malaria-bie.ao,alerts@malaria-bie.ao
ALERT_RISK_THRESHOLD=0.7

# ==================== MODELO ML ====================
MODEL_PATH=models/malaria_model.joblib
RANDOM_STATE=42

# ==================== MLFLOW ====================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=malaria_prediction

# ==================== DOCKER ====================
COMPOSE_PROJECT_NAME=malaria_predict
DOCKER_BUILDKIT=1

# ==================== DESENVOLVIMENTO ====================
PYTHONPATH=/app
PYTHONUNBUFFERED=1